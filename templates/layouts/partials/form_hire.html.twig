<form class="max-w-xl m-4 text-left">
    <div class="mt-0">
        <input class="w-full px-5 py-2 border-1 border-gray-200 dark:border-secondary-dark rounded-md text-md bg-secondary-light dark:bg-ternary-dark text-primary-dark dark:text-ternary-light"
               id="name" name="name" type="text" required="" placeholder="Nom"
               aria-label="Name">
    </div>
    <div class="mt-6">
        <input class="w-full px-5 py-2 border-1 border-gray-200 dark:border-secondary-dark rounded-md text-md bg-secondary-light dark:bg-ternary-dark text-primary-dark dark:text-ternary-light"
               id="email" name="email" type="text" required="" placeholder="Email"
               aria-label="Email">
    </div>
    <div class="mt-6">
        <select class="w-full px-5 py-2 border-1 border-gray-200 dark:border-secondary-dark rounded-md text-md bg-secondary-light dark:bg-ternary-dark text-primary-dark dark:text-ternary-light"
                id="subject" name="subject" required="" aria-label="Project Category">
            <option value="appli"> Appli web complète</option>
            <option value="integration"> Intégration Web</option>
            <option value="symfony"> Symfony</option>
            <option value="apip"> Api-Platform</option>
            <option value="Back"> Autre backend</option>
        </select>
    </div>
    <div class="mt-6">
    <textarea
            class="w-full px-5 py-2 border-1 border-gray-200 dark:border-secondary-dark rounded-md text-md bg-secondary-light dark:bg-ternary-dark text-primary-dark dark:text-ternary-light"
            id="message" name="message" cols="14" rows="6" aria-label="Details"
            placeholder="Description succincte du besoin"></textarea>
    </div>
    <div class="mt-6 pb-4 sm:pb-1">
        <button class="px-4 sm:px-6 py-2 sm:py-2.5 text-white bg-indigo-500 hover:bg-indigo-600 rounded-md focus:ring-1 focus:ring-indigo-900 duration-500"
                type="submit" aria-label="Submit Request">Envoyer
        </button>
    </div>
</form>
