
{% set level = level ?? '2' %}
{% if level == 2 %}
    {% set class = class ?? 'text-3xl md:text-4xl' %}
{% elseif level == 3 %}
    {% set class = class ?? 'text-2xl md:text-3xl' %}
{% elseif level == 4 %}
    {% set class = class ?? 'text-1xl md:text-2xl' %}
{% endif %}
<h{{ level }} class="{{ class|default('') }} mb-5 font-general-semibold text-primary-dark dark:text-primary-light">
    {% block content %}{% endblock %}
</h{{ level }}>
