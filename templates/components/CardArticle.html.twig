

<a href="{{ path('app_article', {slug: slug}) }}"
   class="w-full  flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 relative"
   id="project--{{ index }}"
    {% if not loadMoreTrigger|default(false) %}
        data-live-ignore
    {% endif %}
>
    {% if loadMoreTrigger|default(false) %}
        <div class="absolute inset-0 bg-secondary-light/[.6] dark:bg-ternary-dark/[.6] transition-opacity flex items-center justify-center"
             data-appear-target="loader"
             data-action="appear->live#action"
             data-live-action-param="more"
        >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 150">
                <path fill="none" stroke="currentColor" stroke-width="15" stroke-linecap="round" stroke-dasharray="300 385" stroke-dashoffset="0" d="M275 75c0 31-27 50-50 50-58 0-92-100-150-100-28 0-50 22-50 50s23 50 50 50c58 0 92-100 150-100 24 0 50 19 50 50Z">
                    <animate attributeName="stroke-dashoffset" calcMode="spline" dur="2" values="685;-685" keySplines="0 0 1 1" repeatCount="indefinite"></animate>
                </path>
            </svg>
        </div>
    {% endif %}
    <img class="aspect-[2/1] md:aspect-[1/1] object-cover w-full rounded-t-lg md:h-128 md:h-auto md:w-64 md:rounded-none md:rounded-s-lg" src="{{ image }}" alt="">
    <div class="flex flex-col justify-between p-4 leading-normal">
        <small class="text-sm text-gray-500">{{ date|date('Y-m-d') }}</small>
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            {{ title }}
        </h5>
        <p class="font-normal text-gray-700 dark:text-gray-400">{{ intro }}</p>
    </div>
</a>
