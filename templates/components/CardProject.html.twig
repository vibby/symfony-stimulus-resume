<article class="rounded-xl shadow-lg hover:shadow-xl bg-secondary-light dark:bg-ternary-dark relative overflow-hidden"
     id="project--{{ index }}"
    {% if not loadMoreTrigger|default(false) %}
        data-live-ignore
    {% endif %}
>
    {% if href|default(false)  %}
    <a href="{{ href }}">
        <div class="opacity-0 hover:opacity-100 absolute inset-0 bg-secondary-light/[.6] dark:bg-ternary-dark/[.6] transition-opacity flex items-center justify-center">
            <svg class="svg-icon" style="width: 10em; height: 10em;vertical-align: middle;fill: currentColor;overflow: hidden;" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg"><path d="M819.2 128H204.8C148.48 128 102.4 174.08 102.4 230.4v614.4c0 56.32 46.08 102.4 102.4 102.4h614.4c56.32 0 102.4-46.08 102.4-102.4V230.4c0-56.32-46.08-102.4-102.4-102.4z m51.2 716.8c0 28.16-23.04 51.2-51.2 51.2H204.8c-28.16 0-51.2-23.04-51.2-51.2V230.4c0-28.16 23.04-51.2 51.2-51.2h614.4c28.16 0 51.2 23.04 51.2 51.2v614.4z m-409.6-51.2h-168.96l174.08-174.08-35.84-35.84-174.08 174.08V588.8c0-15.36-10.24-25.6-25.6-25.6s-25.6 10.24-25.6 25.6v230.4c0 7.68 2.56 12.8 7.68 17.92 5.12 5.12 12.8 7.68 17.92 7.68h230.4c15.36 0 25.6-10.24 25.6-25.6 0-12.8-10.24-25.6-25.6-25.6zM793.6 230.4h-230.4c-15.36 0-25.6 10.24-25.6 25.6s10.24 25.6 25.6 25.6h168.96l-174.08 174.08 35.84 35.84 174.08-174.08V486.4c0 15.36 10.24 25.6 25.6 25.6s25.6-10.24 25.6-25.6v-230.4c0-7.68-2.56-12.8-7.68-17.92-5.12-5.12-10.24-7.68-17.92-7.68z"  /></svg>
        </div>
    {% endif %}
    {% if loadMoreTrigger|default(false) %}
        <div class="absolute inset-0 bg-secondary-light/[.6] dark:bg-ternary-dark/[.6] transition-opacity flex items-center justify-center"
             data-appear-target="loader"
             data-action="appear->live#action"
             data-live-action-param="more"
        >
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 300 150">
                <path fill="none" stroke="currentColor" stroke-width="15" stroke-linecap="round" stroke-dasharray="300 385" stroke-dashoffset="0" d="M275 75c0 31-27 50-50 50-58 0-92-100-150-100-28 0-50 22-50 50s23 50 50 50c58 0 92-100 150-100 24 0 50 19 50 50Z">
                    <animate attributeName="stroke-dashoffset" calcMode="spline" dur="2" values="685;-685" keySplines="0 0 1 1" repeatCount="indefinite"></animate>
                </path>
            </svg>
        </div>
    {% endif %}
        <div>
            <img src="{{ image }}" alt="Projet web {{ title }}"
                 class="rounded-t-xl border-none aspect-[780/680]">
        </div>
        <div class="text-center px-4 py-6 relative">
            {% if date|default(false)  %}
                <div class="absolute top-2 right-2 rounded-lg bg-black/[.2] dark:bg-black/[.6] px-2 dark:text-white">{{ date }}</div>
            {% endif %}
            <p class="font-general-semibold text-xl text-ternary-dark dark:text-ternary-light font-semibold mb-2">
                {{ title }}
            </p>
            <span class="font-general-medium text-lg text-ternary-dark dark:text-ternary-light">
                {{ category }}
            </span>
        </div>
    {% if href|default(false)  %}
    </a>
    {% endif %}
</article>
