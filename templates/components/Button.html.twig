{% set style = style ?? 'blue' %}
{% if href|default(false) %}
<a href="{{ href }}" target="__blank"
{% else %}
<button data-action="{{ action|default('') }}"
        {% endif %}
        {% if style == 'white' %}
            class="flex justify-center items-center px-4 sm:mb-0 text-lg border border-indigo-200 dark:border-ternary-dark py-2.5 sm:py-3 shadow-lg rounded-lg bg-indigo-50 focus:ring-1 focus:ring-indigo-900 hover:bg-indigo-500 text-gray-500 hover:text-white duration-500"
        {% endif %}
        {% if style == 'blue' %}
            class="text-md bg-indigo-500 hover:bg-indigo-600 text-white shadow-sm rounded-md px-5 py-2.5"
        {% endif %}
        data-action="{{ action|default('') }}"
>
    {% block content %}{{ label|default('') }}{% endblock %}
{% if href|default(false) %}
    </a>
{% else %}
    </button>
{% endif %}



