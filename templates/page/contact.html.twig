{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block main %}
    <div class="flex flex-col md:flex-row w-full gap-8 mt-12">
        <article class="grow">
            <twig:Title>
                Envoyez-moi un message
            </twig:Title>
            {% include 'layouts/partials/form_hire.html.twig' %}
            {% if contact|default(false) %}
                {% block success_stream %}
                    <turbo-stream action="replace" targets="[data-id=form_hire_footer]">
                        <template>
                            <twig:Alert>
                                Merci {{ contact.name }}. Votre message a bien été envoyé.
                                <twig:block name="title">
                                    Succès !
                                </twig:block>
                            </twig:Alert>
                        </template>
                    </turbo-stream>
                {% endblock %}
            {% endif %}
        </article>
        <article class="grow">
            <twig:Title class="sr-only">
                Autres infos de contact
            </twig:Title>
            <twig:DefGroup>
                <twig:DefItem title="Identité">
                    Vincent Beauvivre
                </twig:DefItem>
                <twig:DefItem title="Localisation">
                    Nantes, France
                </twig:DefItem>
                <twig:DefItem title="Modalité">
                    Distanciel ou présentiel
                </twig:DefItem>
                <twig:DefItem title="Mobilité">
                    <ul>
                        <li>Courte période : France entière</li>
                        <li>Longue période : Loire-Atlantique</li>
                    </ul>
                </twig:DefItem>
                <twig:DefItem title="Statuts possibles">
                    Employeriat, Contrat freelance
                </twig:DefItem>
                <twig:DefItem title="Siret">
                    938400256
                </twig:DefItem>
            </twig:DefGroup>
        </article>
    </div>

{% endblock %}
